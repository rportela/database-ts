{
  "name": "database-ts",
  "version": "1.0.1",
  "description": "A unified implementation of database connections using typescript",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/sqlite3": "^3.1.6",
    "jest": "^26.5.2",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rportela/database-ts.git"
  },
  "keywords": [
    "Database",
    "Typescript",
    "ORM"
  ],
  "author": "Rodrigo Portela",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rportela/database-ts/issues"
  },
  "homepage": "https://github.com/rportela/database-ts#readme",
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.(test|spec)?\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/fixtures/"
    ]
  }
}
